# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# SORD Backend - PRODUÇÃO
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# ⚠️  IMPORTANTE: Este arquivo mostra como configurar para PRODUÇÃO
# ⚠️  Copie este conteúdo para seu arquivo .env e substitua os valores
# ⚠️  NUNCA commite o arquivo .env com credenciais reais!
#
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# SERVIDOR
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
PORT=3001
NODE_ENV=production

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# MONGODB ATLAS (CLOUD - PRODUÇÃO)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# 1. Acesse: https://cloud.mongodb.com
# 2. Crie um cluster (se ainda não tem)
# 3. Vá em "Database" > "Connect" > "Connect your application"
# 4. Copie a connection string e substitua abaixo
# 
MONGODB_URI=mongodb+srv://seu_usuario:sua_senha_forte@cluster0.xxxxx.mongodb.net/sord_db?retryWrites=true&w=majority

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# JWT (JSON WEB TOKEN)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# Gere uma chave secreta FORTE e ÚNICA
# PowerShell: -join ((65..90) + (97..122) + (48..57) | Get-Random -Count 32 | ForEach-Object {[char]$_})
# 
JWT_SECRET=SUBSTITUA_COM_UMA_CHAVE_SECRETA_FORTE_MINIMO_32_CARACTERES

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# MERCADO PAGO - PRODUÇÃO
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# ⚠️  CRÍTICO: Use APENAS credenciais de PRODUÇÃO aqui!
# ⚠️  As credenciais devem começar com: APP_USR-
# 
# Como obter:
# 1. Acesse: https://www.mercadopago.com.br/developers/panel/credentials
# 2. Vá na aba "Credenciais de produção"
# 3. Copie a Public Key e o Access Token
# 
MERCADO_PAGO_PUBLIC_KEY=APP_USR-XXXXXXXX-XXXXXX-XXXX-XXXX-XXXXXXXXXXXX
MERCADO_PAGO_ACCESS_TOKEN=APP_USR-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# WEBHOOK SECRET
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# Gere uma chave DIFERENTE do JWT_SECRET
# PowerShell: -join ((65..90) + (97..122) + (48..57) | Get-Random -Count 32 | ForEach-Object {[char]$_})
# 
WEBHOOK_SECRET=SUBSTITUA_COM_OUTRA_CHAVE_SECRETA_FORTE_DIFERENTE

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# FRONTEND URL (CORS)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# Substitua com o domínio REAL do seu frontend em produção
# Exemplos:
#   - Vercel: https://seuapp.vercel.app
#   - Netlify: https://seuapp.netlify.app
#   - Domínio próprio: https://www.seuapp.com.br
# 
FRONTEND_URL=https://seu-frontend-em-producao.com

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
