# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# SORD Backend - Configurações de Ambiente
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Servidor
PORT=3001
NODE_ENV=development  # Em produção, altere para: production

# MongoDB Database
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Local:
MONGODB_URI=mongodb://localhost:27017/sord_db

# MongoDB Atlas (Cloud - Produção):
# MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/sord_db?retryWrites=true&w=majority

# Authentication (JWT)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Gere uma chave secreta forte para produção (mínimo 32 caracteres)
JWT_SECRET=sua-chave-secreta-super-segura-mude-em-producao-minimo-32-caracteres

# Mercado Pago - Credenciais
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# IMPORTANTE:
# - Para TESTES: Use credenciais que começam com TEST-
# - Para PRODUÇÃO: Use credenciais que começam com APP_USR-
# 
# Obtenha suas credenciais em:
# https://www.mercadopago.com.br/developers/panel/credentials

# DESENVOLVIMENTO (Teste)
MERCADO_PAGO_PUBLIC_KEY=TEST-XXXXXXXXXXXXXXXXXXXXXXXXXXXX
MERCADO_PAGO_ACCESS_TOKEN=TEST-XXXXXXXXXXXXXXXXXXXXXXXXXXXX

# PRODUÇÃO (descomente e substitua com suas credenciais reais)
# MERCADO_PAGO_PUBLIC_KEY=APP_USR-XXXXXXXXXXXXXXXXXXXXXXXXXXXX
# MERCADO_PAGO_ACCESS_TOKEN=APP_USR-XXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Webhook Secret (para validar notificações do Mercado Pago)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Gere uma chave aleatória forte para produção
WEBHOOK_SECRET=sua_chave_secreta_muito_segura_aqui_mude_em_producao

# Front-end URL (CORS)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# DESENVOLVIMENTO:
FRONTEND_URL=http://localhost:3000

# PRODUÇÃO (substitua com seu domínio real):
# FRONTEND_URL=https://seu-app.vercel.app
# FRONTEND_URL=https://seu-app.netlify.app
# FRONTEND_URL=https://seu-dominio.com

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
