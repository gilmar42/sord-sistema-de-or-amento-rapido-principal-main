
# SORED Backend .env - Mercado Pago Integração

# Chave secreta JWT para autenticação
JWT_SECRET=sua-chave-secreta-aqui

# Porta do backend
PORT=5000
NODE_ENV=development

# === MERCADO PAGO ===
# Access Token de produção ou sandbox (obrigatório)
MERCADO_PAGO_ACCESS_TOKEN=COLE_AQUI_SEU_ACCESS_TOKEN_REAL
# Public Key de produção ou sandbox (obrigatório para frontend)
MERCADO_PAGO_PUBLIC_KEY=COLE_AQUI_SUA_PUBLIC_KEY_REAL
# Webhook Secret (defina um valor forte e igual no painel do Mercado Pago)
MERCADO_PAGO_WEBHOOK_SECRET=defina-um-segredo-forte-aqui

# URL do frontend (ajuste conforme ambiente)
FRONTEND_URL=http://localhost:5173
FRONTEND_URL_PRODUCTION=https://seu-dominio.com

# Banco de dados (ajuste se necessário)
MONGODB_URI=mongodb://localhost:27017/sored

# Outros parâmetros
PAYMENT_ACTIVATION_AMOUNT=100.00
CURRENCY=BRL
