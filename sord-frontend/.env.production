# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# API BACKEND URL
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# URL completa da API do backend, incluindo /api no final
# Exemplos:
#   - Heroku: https://sord-backend.herokuapp.com/api
#   - Railway: https://sord-backend.railway.app/api
#   - VPS própria: https://api.seuapp.com.br/api
# 
VITE_API_URL=https://seu-backend-url.com/api

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# MERCADO PAGO - PUBLIC KEY
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# ⚠️  CRÍTICO: Use a MESMA chave configurada no backend!
# ⚠️  A chave deve começar com: APP_USR- (produção)
# 
# Como obter:
# 1. Acesse: https://www.mercadopago.com.br/developers/panel/credentials
# 2. Vá na aba "Credenciais de produção"
# 3. Copie a "Public Key" (a mesma do backend)
# 
VITE_MERCADO_PAGO_PUBLIC_KEY=APP_USR-XXXXXXXX-XXXXXX-XXXX-XXXX-XXXXXXXXXXXX

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# ✅ CHECKLIST ANTES DE FAZER DEPLOY
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# [ ] VITE_API_URL apontando para backend de produção
# [ ] VITE_MERCADO_PAGO_PUBLIC_KEY com chave de PRODUÇÃO (APP_USR-)
# [ ] Chave pública é a MESMA do backend
# [ ] Testou a conexão com o backend
# [ ] Build funcionando: npm run build
# 
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# CONFIGURAÇÃO EM PLATAFORMAS DE HOSTING
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# VERCEL:
# 1. Vá em: Settings > Environment Variables
# 2. Adicione:
#    - VITE_API_URL
